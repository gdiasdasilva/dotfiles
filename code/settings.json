{
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "editor.minimap.enabled": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "workbench.startupEditor": "newUntitledFile",
    "editor.tabSize": 2,
    "html.format.wrapLineLength": 100,
    "emmet.includeLanguages": {
        "erb": "html",
        "javascript": "javascriptreact",
    },
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.quickOpen.closeOnFocusLost": false,
    "ruby.intellisense": "rubyLocate",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        100
    ],
    "sync.gist": "c244397debc8d3d5e13e3fb31be098a5",
    "sync.quietSync": false,
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "sync.autoDownload": true,
    "sync.autoUpload": true,
    "sync.forceDownload": false,
    "terminal.integrated.lineHeight": 1.4,
    "search.exclude": {
        "tmp/**": true
    },
    "workbench.editor.enablePreview": false,
    "workbench.statusBar.visible": true,
    "workbench.colorCustomizations": {
        "settings.modifiedItemForeground": "#80CBC4"
    },
    "explorer.decorations.badges": false,
    "typescript.validate.enable": true,
    "javascript.validate.enable": true,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "sync.forceUpload": true,
    "editor.fontFamily": "Fira Code, DejaVu Sans Mono, Menlo, Monaco, 'Courier New', monospace",
    "workbench.activityBar.visible": true,
    "ruby.rubocop.suppressRubocopWarnings": true,
    "editor.fontLigatures": true,
    "extensions.ignoreRecommendations": true,
    "workbench.editor.wrapTabs": true,
    "eslint.run": "onSave",
    "settingsSync.ignoredExtensions": [

    ],
    "eslint.alwaysShowStatus": true,
    "eslint.lintTask.enable": true,
    "eslint.validate": [
        "typescript",
        "typescriptreact"
    ],
    "eslint.format.enable": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}
